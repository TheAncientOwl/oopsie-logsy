@startuml Filters

package OopsieLogsy #LightYellow {
    package Backend {
        struct FilterComponent #LightBlue {
            + id : string
            + over_alternative_id : string
            + data : string
            + is_regex : string
            + is_equals : bool
            + ignore_case : bool
        }

        struct FilterColors #LightBlue {
            + fg: string
            + bg : string
        }

        struct Filter #LightBlue {
            + id : string
            + name : string
            + is_active : bool
            + is_highlight_only : bool
            + component_ids : string[]
            + colors : FilterColors
            + priority : uint64
            + collapsed : bool
        }

        struct FilterTab #LightBlue {
            + id : string
            + name : string
            + filter_ids: string[]
        }

        struct FilterTabsManager #LightSkyBlue {
            + set(new_tabs: FilterTab[], new_filters: Filter[], new_components: Component[]) : void
            + get_tabs() : &FilterTab[]
            + get_filters() : &Filter[]
            + get_components() : &Filter[]

            - tabs : FilterTab[]
            - filters : Filter[]
            - components : FilterComponent[]
        }

        Filter -right-> FilterColors : has one
        FilterTabsManager -down-> FilterTab : has all
        FilterTabsManager -down-> Filter : has all
        FilterTabsManager -down-> FilterComponent : has all
    }
}

@enduml